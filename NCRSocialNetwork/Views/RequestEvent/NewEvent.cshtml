@model NCRSocialNetwork.Models.EventRequest

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Event Request</h2>

@using (Html.BeginForm(new { @class = "form_style" }))
{
    @Html.ValidationSummary(true)

        <div class="editor-label">
            @Html.LabelFor(model => model.EventRequestEventTitle)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EventRequestEventTitle)
            @Html.ValidationMessageFor(model => model.EventRequestEventTitle)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EventRequestEventDescription)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EventRequestEventDescription)
            @Html.ValidationMessageFor(model => model.EventRequestEventDescription)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EventRequestClubId, "Club")
        </div>
        <div class="editor-field">
            @Html.DropDownList("EventRequestClubId", String.Empty)
            @Html.ValidationMessageFor(model => model.EventRequestClubId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EventRequestUserId, "User")
        </div>
        <div class="editor-field">
            @Html.DropDownList("EventRequestUserId", String.Empty)
            @Html.ValidationMessageFor(model => model.EventRequestUserId)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
